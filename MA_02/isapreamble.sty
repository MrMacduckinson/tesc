\makeatletter
\newcommand\underparen[1]{%
  \mathop{%
    \vtop{
      \m@th
      \ialign{%
        ##\crcr
        $\hfil\displaystyle{#1}\hfil$\crcr
        \noalign{\kern3\p@\nointerlineskip}%
        \upparenfill\crcr
      }%
    }%
  }\limits
}
\newcommand\upparenfill{%
  $\m@th\setbox\z@\hbox{$\braceld$}%
    \bracelu\leaders\vrule \@height\ht\z@ \@depth\z@\hfill\braceru$%
}
\makeatother

